    android:layout_width="match_parent"
    tools:context=".MainActivity">

    <TextView android:text="hello"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txt_hello"/>

    <com.google.android.gms.ads.AdView
